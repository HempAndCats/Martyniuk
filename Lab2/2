\documentclass{beamer}
\usepackage{cmap}
\usepackage[T2A]{fontenc}
\usepackage[utf8]{inputenc}
\usepackage[english, russian]{babel}
\usepackage{colortbl}
\usetheme{CambridgeUS}

\begin{document}
	\title{Тестовые слайды}
	\subtitle{Основы информационной безопасности}
	\author{Мартынюк Жанна Вадимовна 2КБ}
	\institute{БФУ им. И. Канта}
	\date{6 сентября 2020г.}
	\begin{frame}
		\maketitle
	\end{frame}

	\begin{frame}
		\frametitle{Описание курсовой}
		\begin{center}
			\textbf{Тема курсовой:}\\
			«Средства электронной подписи и шифрования документов: принципы работы, типы, требования, обзор российского рынка»
		\end{center}
	
		\begin{center}
			\textbf{Задача курсовой:\\}
			\item{Изучение определения электронной подписи,}
			\item{Узнать история возникновения электронной подписи ,}
			\item{Рассмотреть виды электронной подписи и где они применяются,}
                                \item{Узнать, где и как можно получить электронную подпись,}
                                \item{Изучение алгоритмов электронной подписи,}
                                \item{Рассмотреть программы, с помощью которых создаются и используются электронные подписи.\\}
		\end{center}
		\begin{center}
			\textbf{Методы исследования:\\}
			\item{Изучение и анализ средств электронной подписи} 
			\item{Обобщение полученных результатов}
		\end{center}	
	\end{frame}
	
	\begin{frame}
		\frametitle{Результаты курсовой работы}
		\begin{center}
			\item{Была изучено определение, история, возможность получения и алгоритмы электронной подписи.}
			\item{Также были рассмотрены программы, которые создают электронные подписи}
			\item{Была рассмотрена подпись, которая заменяет обычнюу подпись.}
		\end{center}
	\end{frame}
\end{document}
